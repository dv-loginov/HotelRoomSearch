extends ../../components/sub-layout/sub-layout

block variables
    -const title = 'Room details page'

block main
    include ../../components/icon-text/icon-text
    include ../../components/comment/comment
    include ../../components/bullet-list/bullet-list
    include ../../components/subtitle/subtitle
    include ../../components/pie/pie
    .room-detals
        img.room-detals__img(
            alt="image-header"
            src=require('../../pages/room-details/img/image.png').default)
        .room-detals__info
            .room-detals__specialty
                .room-detals__specialty-room
                    .room-detals__specialty-room-info
                        +subtitle({text:"Сведения о номере"})
                        +icon-text({
                            mod: "list",
                            title: "Комфорт",
                            subtitle: "Шумопоглощающие стены"
                        })
                        +icon-text({
                            mod: "list",
                            title: "Удобство",
                            subtitle: "Окно в каждой из спален"
                        })
                        +icon-text({
                            mod: "list",
                            title: "Уют",
                            subtitle: "Номер оснащен камином"
                        })
                    .room-detals__specialty-room-impression
                        +subtitle({text:"Впечатления от номера"})
                        +pie({})
                .room-detals__specialty-comment
                    .room-detals__specialty-comment-header
                        .room-detals__specialty-comment-header-wrap
                            +subtitle({text:"Отзывы посетителей номера"})
                            span="2 отзыва"
                        .room-detals__specialty-comment-wrap
                            +comment({
                                iconText: {
                                    img: require('../../components/comment/img/murad_sarafanov.jpg').default,
                                    title: 'Мурад Сарафанов',
                                    subtitle: '5 дней',
                                },
                                likeButton: {
                                    isLike: true,
                                    num: '12'
                                },
                                descText:
                                    `Великолепный матрас на кровати в основной спальне!
                                     А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие.
                                     Выкрикивал комплименты повару — никто не жаловался из соседей.`
                            })
                        .room-detals__specialty-comment-wrap
                            +comment({
                                iconText: {
                                    img: require('../../components/comment/img/patricia_steklyshkova.jpg').default,
                                    title: 'Патрисия Стёклышкова',
                                    subtitle: 'Неделю назад',
                                },
                                likeButton: {
                                    isLike: false,
                                    num: '2'
                                },
                                descText:
                                    `Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую
                                    заказать, каждый день новое блюдо и десерт как комплимент`
                            })
                .room-detals__specialty-addition
                    .room-detals__specialty-rules
                        +subtitle({text:"Правила"})
                        +bullet-list({
                            items: [
                                {text: "Нельзя с питомцами"},
                                {text: "Без вечеринок и мероприятий"},
                                {text: "Время прибытия - после 13:00, а выезд до 12:00"}
                            ]
                        })
                    .room-detals__specialty-repeal
                        +subtitle({text:"Отмена"})
                        .room-detals__specialty-repeal-text
                            |Бесплатная отмена в течение 48 ч.
                            |После этого при отмене не позднее чем за 5 дн.
                            |до прибытия вы получите полный возврат за вычетом сбора за услуги.
            .room-detals__booking
                include ../../components/forms/booking/booking

