section.section.section_sec-form-elements
    include ../components/logo/logo
    .warp
        .row-in-sec
            .col
                .row-in-col.row-in-col_20
                    +text-field({
                      label: "text-field",
                      className: "text-field",
                      type: "text",
                      name: "name",
                      defValue: "Email",
                      id: "text-field"
                    })
                .row-in-col.row-in-col_20
                    +dropdown({
                        mod: "def",
                        modIco: "def",
                        label: "dropdown",
                        defValue: "Сколько гостей",
                        ico: "expand_more"
                    })
                .row-in-col.row-in-col_20
                    +masked-text-field({label:"masked text field"})
                .row-in-col.row-in-col_40
                    include ../components/dropdown-date/dropdown-date
                .row-in-col.row-in-col_40
                    include ../components/dropdown-filter-date/dropdown-filter-date
                .row-in-col
                    +subscription-text-field({
                        label: "subscription-text-field",
                        defValue: "Email",
                        ico: "arrow_forward",
                        modIco:"subscription",
                        mod: "subscription"
                    })
            .col
                .row-in-col.row-in-col_40
                    include ../components/checkbox-buttons/checkbox-buttons
                .row-in-col.row-in-col_40
                    +radio-buttons({showLabel: true})
                .row-in-col.row-in-col_40
                    +label({text: "toggle"})
                    +toggle({
                        text: "Получать спецпредложения",
                        id: "toggle-1",
                        checked: true
                    })
                    +toggle({
                        text: "Получать спецпредложения",
                        id: "toggle-2",
                    })
                .row-in-col.row-in-col_40
                    include ../hoc/like-buttons/like-buttons
                .row-in-col.row-in-col_40
                    include ../hoc/rate-buttons/rate-buttons
            .col
                include ../hoc/buttons/buttons
        .row-in-sec
            .col
                +dropdown({
                    type: "furniture",
                    label: "dropdown",
                    ico: "expand_more",
                    id: "dropdown-furniture",
                })
            .col
                +dropdown({
                  type: "guests",
                  label: "dropdown",
                  defValue: "",
                  ico: "expand_more",
                  id: "dropdown-guests-noinit",
                })
            .col
                +dropdown({
                  type: "guests",
                  label: "dropdown",
                  defValue: "",
                  ico: "expand_more",
                  id: "dropdown-guests-init",
                })
        .row-in-sec
            .col
                +checkbox-list({
                  name: "checkbox list",
                  items: [
                    {
                      name: "breakfast",
                      text: "Завтрак",
                      value: "no",
                      checked: false
                    },
                    {
                      name: "desk",
                      text: "Письменный стол",
                      value: "yes",
                      checked: true
                    },
                    {
                      name: "feedingСhair",
                      text: "Стул для кормления",
                      value: "yes",
                      checked: true
                    },
                    {
                      name: "crib",
                      text: "Кроватка",
                      value: "yes",
                      checked: true
                    },
                    {
                      name: "television",
                      text: "Телевизор",
                      value: "no",
                      checked: false
                    },
                    {
                      name: "shampoo",
                      text: "Шампунь",
                      value: "no",
                      checked: false
                    }
                  ]
                })
            .col
                //include ../components/typography/typography
            .col
                +bullet-list({
                  name: "bullet list",
                  items: [
                    {text: "Нельзя с питомцами"},
                    {text: "Без вечеринок и мероприятий"},
                    {text: "Время прибытия - после 13:00, а выезд до 12:00"}
                  ]
                })
