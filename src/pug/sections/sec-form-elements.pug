                    +label({text: "toggle"})
                    +toggle({
                        text: "Получать спецпредложения",
                        id: "toggle-1",
                        checked: true
                    })
                    +toggle({
                        text: "Получать спецпредложения",
                        id: "toggle-2",
                    })
