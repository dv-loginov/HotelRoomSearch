mixin dropdown-option(args)
    .dropdown-option
        .dropdown-option_text=args.text
        .dropdown-option_counter
            .dropdown-option_counter-sub(data-item=args.item data-action="sub")="-"
            .dropdown-option_counter-value(data-counter-value=args.value)=args.value
            .dropdown-option_counter-add(data-item=args.item data-action="add")="+"
