include ../../components/label/label
include ../../components/dropdown-option/dropdown-option

mixin dropdown(args)
    -   const mod=args.mod ? ' dropdown_'+args.mod : ''
    -   const modIco=args.modIco ?" dropdown__input-ico_" + args.modIco : ''
    -   const defValue=args.defValue ? args.defValue : ''
    div(class="dropdown"+mod)
        +label({text: args.label})
        .dropdown__wrap-input
            input(class="dropdown__input" placeholder=defValue readonly)
            div(class="dropdown__input-ico"+modIco)
                span(class="material-icons md-24")=args.ico
        if args.mod!=="def"
            .dropdown__wrap-options
                if args.mod==="furniture"
                    +dropdown-option({
                      text: "спальни",
                      value: "2"
                    })
                    +dropdown-option({
                      text: "кровати",
                      value: "2"
                    })
                    +dropdown-option({
                      text: "ваные комнаты",
                      value: "0"
                    })
                if args.mod === "guests"
                    +dropdown-option({
                      text: "взрослые",
                      value: "0"
                    })
                    +dropdown-option({
                      text: "дети",
                      value: "0"
                    })
                    +dropdown-option({
                      text: "младенцы",
                      value: "0"
                    })
