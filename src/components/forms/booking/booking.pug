include ../../room-number/room-number
include ../../room-price/room-price
include ../../date-range/date-range
include ../../dropdown-select/dropdown-select
include ../../button/button

form(class="form form-booking" id="form-booking")
    .form-booking__header
        +room-number({num: 888, isLux: true})
        +room-price("9 990")
    .form-booking__range
        +date-range({
          labelStart: "прибытие",
          labelEnd: "выезд",
          placeholderStart: "19.08.2019",
          placeholderEnd: "23.08.2019",
        })
    .form-booking__guests
        .form-search__guests
            +dropdown-select({
              labelText: "гости",
              type: "people",
              mod: "form",
              modIco: "rich",
              placeholder: "Сколько гостей",
              options: [
                {text: "взрослые", value: 0},
                {text: "дети", value: 0},
                {text: "младенцы", value: 0}
              ]
            })
    .form-booking__items
        .item-price
            .item-price__text 9 990₽ х 4 суток
            .item-price__ico(style={visibility: 'hidden'}) i
            .item-price__price 39 960₽
        .item-price
            .item-price__text Сбор за услуги: скидка 2 179₽
            .item-price__ico i
            .item-price__price 0₽
        .item-price
            .item-price__text Сбор за дополнительные услуги
            .item-price__ico i
            .item-price__price 300₽
    .form-booking__rezult
        .form-booking__rezult-text Итого
        .form-booking__rezult-dots
        .form-booking__rezult-sum 38 081₽
    .form-booking__button
        +button({
          role: "btn",
          size: "big",
          text: "забронировать"
        })
