mixin icon-text(args)
    -   const mod=args.mod?' icon-text_' + args.mod : ''
    div(class="icon-text" + mod)
        .icon-text__ico
            img(
                src=require(`../../components/icon-text/img/${args.img}`).default
                alt='img')
        .icon-text__descroption
            .icon-text__title=args.title
            .icon-text__subtitle=args.subtitle
