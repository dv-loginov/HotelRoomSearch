include ../room-number/room-number
include ../room-price/room-price
include ../recall/recall
include ../room-slider/room-slider

mixin room(num, isLux, price, rating, recall)
    .room()
        +room-slider(num)
        .room__header
            +room-number(num, isLux)
            +room-price(price)
        .room__footer
            +rate-button(rating)
            +recall(recall)
